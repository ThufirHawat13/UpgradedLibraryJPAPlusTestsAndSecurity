CREATE TABLE IF NOT EXISTS person
(
    person_id INTEGER NOT NULL GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    name_surname VARCHAR(50) NOT NULL UNIQUE,
    age_of_birth VARCHAR(4) NOT NULL
);


CREATE TABLE IF NOT EXISTS book
(
    book_id integer NOT NULL GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    book_name VARCHAR(50) NOT NULL,
    year_of_writing INTEGER NOT NULL CHECK (year_of_writing > 500),
    person_id INTEGER REFERENCES person(person_id) ON DELETE SET NULL,
    author VARCHAR(50) NOT NULL
);

CREATE TABLE IF NOT EXISTS book
(
    id integer NOT NULL GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    username varchar(20) UNIQUE NOT NULL,
    user_password varchar(30)
);

